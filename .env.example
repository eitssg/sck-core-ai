# Environment variables for SCK Core AI development

# Local development mode
LOCAL_MODE=true
LOG_LEVEL=DEBUG
CONSOLE=interactive

# Langflow configuration
LANGFLOW_HOST=localhost
LANGFLOW_PORT=7860
LANGFLOW_FLOW_ID=yaml-cf-ai-agent-v1
LANGFLOW_API_KEY=

# AI model credentials (choose one or more)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure OpenAI (alternative)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2024-02-01

# AWS configuration for CloudFormation validation
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=default

# Server configuration
# Prefer SCK_AI_PORT (new) over legacy SERVER_PORT. 8200 chosen to avoid local DynamoDB (8000) conflict
SERVER_HOST=0.0.0.0
SCK_AI_PORT=8200
# Legacy variable (still honored by start.ps1 if SCK_AI_PORT not set)
SERVER_PORT=8200
SERVER_RELOAD=true

# MCP server configuration  
MCP_PORT=3000
MCP_LOG_LEVEL=info

# Development tools
PYTHONPATH=.
PYTEST_ARGS=--cov=core_ai --cov-report=html